import sys
wantsToDoAnother = True
while wantsToDoAnother == True:
    print('What is your grade percentage right now?')
    overall = float(sys.stdin.readline())
    print('What letter grade would you like to have after the midterm?')
    desiredGrade = sys.stdin.readline()
    minPercentage = float()
    if desiredGrade == 'A+\n' or desiredGrade == 'a+\n':
        minPercentage = 98.0
    elif desiredGrade == 'A\n' or desiredGrade == 'a\n':
        minPercentage = 93.0
    elif desiredGrade == 'A-\n' or desiredGrade == 'a-\n':
        minPercentage = 90.0
    elif desiredGrade == 'B+\n' or desiredGrade == 'b+\n':
        minPercentage = 88.0
    elif desiredGrade == 'B\n' or desiredGrade == 'b\n':
        minPercentage = 85.0
    elif desiredGrade == 'B-\n' or desiredGrade == 'b-\n':
        minPercentage = 82.0
    elif desiredGrade == 'C+\n' or desiredGrade == 'c+\n':
        minPercentage = 80.0
    elif desiredGrade == 'C\n' or desiredGrade == 'c\n':
        minPercentage = 77.0
    elif desiredGrade == 'C-\n' or desiredGrade == 'c-\n':
        minPercentage = 74.0
    elif desiredGrade == 'D+\n' or desiredGrade == 'd+\n':
        minPercentage = 72.0
    elif desiredGrade == 'D\n' or desiredGrade == 'd\n':
        minPercentage = 70.0
    elif desiredGrade == 'F\n' or desiredGrade == 'f\n':
        minPercentage = 0.0

    weightedOverall = overall * 0.8
    weightedMidterm = minPercentage - weightedOverall
    midterm = weightedMidterm * 5
    hundred = 100.0
    zero = 0.0
    if midterm > hundred:
        print('That\'s Impossible, your grade is too low')
    elif midterm > zero:
        midterm = '%.2f'%(midterm)
        print('You need to score at least ' + midterm + '% if you wanna get that grade.')
    else:
        print('You don\'t even need to show up if you wanna get that grade.')
    print('Wanna do another? (Yes/No)')
    response = sys.stdin.readline()
    if response != 'Yes\n':
        if response != 'yes\n':
            break

